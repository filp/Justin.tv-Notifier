{
    "name": "Justin.tv Notifier",
    "version": "0",
    "description": "Check the status of your favourite Justin.tv streams, and display a notification when a stream goes online!",
    "background_page": "html/background.html",
    "browser_action":
    {
    	"default_icon": "img/icon19.png",
    	"default_title": "__MSG_popup_button_title__",
    	"default_popup": "html/popup.html"
    },
    
    "permissions": ["http://api.justin.tv/api/user/favorites/*", "http://api.justin.tv/api/stream/list.json", "notifications"],
    "default_locale": "en"
}